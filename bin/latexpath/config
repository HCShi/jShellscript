echo "正在初始化配置......"
if [ ! -e $HOME/texmf/tex/latex/local/ ];then mkdir -p $HOME/texmf/tex/latex/local/;fi

curdir=`pwd`
cp $curdir/*.cls ~/texmf/tex/latex/local
cp $curdir/*.sty ~/texmf/tex/latex/local

echo "初始化配置结束....."

