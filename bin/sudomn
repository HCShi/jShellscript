#!/bin/bash
name=`basename $0`
if [ $name = "sshxm" ]
then
    ip=`/sbin/ifconfig -a | grep inet | grep -v 127.0.0.1 | grep -v 172.17.0.1 | grep -v 192.168.56.1 | grep -v inet6 | awk '{print $2}' | tr -d "addr:"`
    echo $ip >> mytmpip
    scp mytmpip mininet@192.168.56.101:~/
    rm mytmpip
    ssh -X mininet@192.168.56.101
elif [ $name = "sudomn" ]
then
    # 这个是在 mininet 下的一个命令, 放在这里只是为了备份方便, 需要经常从 mininet 中 copy 备份
    ip=`cat ~/mytmpip`
    # sudo mn --custom $1 --topo mytopo --controller=remote,ip=$ip,port=6653 --link tc,bw=10,delay=1ms --mac
    #sudo mn --custom $1 --topo mytopo --controller=remote,ip=$ip,port=6653 --switch ovsk,protocols=OpenFlow13
    #sudo mn --custom $1 --topo mytopo --controller=remote,ip=$ip,port=6653 --switch ovsk,protocols=OpenFlow13
    sudo mn --custom $1 --topo mytopo --controller=remote,ip=$ip,port=6653 --switch ovsk  # openflow 13 把我坑惨了
elif [ $name = "scpm" ]
then
    scp $1 mininet@192.168.56.101:~/
elif [ $name = "scpbanwagong" ]
then 
    scp -P 29318 $1 root@45.78.9.29:$2
# exp: scpaliyun filename  或者  scpaliyun filename .  第二个是加了一个路径, 默认就是 . 家目录
elif [ $name = "scpaliyun" ]
then 
    scp $1 root@115.28.247.19:$2
elif [ $name = "scpbaliyun" ]
then 
    scp root@115.28.247.19:$1 $2
elif [ $name = "scptencent" ]
then 
    scp $1 root@115.159.88.186:$2
elif [ $name = "scpbtencent" ]
then 
    scp root@115.159.88.186:$1 $2
elif [ $name = "qkill" ]
then
    ps -e | grep $1 | cut -c 1-5 | xargs kill
elif [ $name = "day" ]
then
    #/bin/date '+%Y-%m-%d'
    /bin/date '+%Y-%m-%d.%H-%M-%S'
elif [ $name = "md5sumtr" ]
then
    md5sum $1 | tr "a-z" "A-Z"
fi
