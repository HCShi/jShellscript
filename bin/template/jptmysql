#!/usr/bin/python
#coding: utf-8

##################################################################
# argparse
##################################################################
import argparse
parser = argparse.ArgumentParser(
    prog="jptmysql",
    formatter_class=argparse.RawDescriptionHelpFormatter,  # 没有这句话, 换行会过滤掉
    description='''\
        Usage Example:
        --------------------------------
        jptmysql
        jptmysql --easy
        jptmysql --hard
        jptmysql -l1  # 快速查询数据库
        jptmysql -l2  # 一个完整的类
        # 以上格式经测试正确, 其它格式出错了我不背锅

        --------------------------------
        # sudo apt install python-mysqldb
        # 数据库用的是 ~/github/jTemplate/database/mysql/example.sql 中的
        ''')
parser.add_argument('--easy', action='store_true', help='python simple socket [default]')
parser.add_argument('-l1', action='store_true', help='same to easy')
parser.add_argument('-l2', action='store_true', help='a complete class')

parser.add_argument('--autho', action='store_const', const='14thCoder', help='show the autho')
parser.add_argument('--version', action='version', version='%(prog)s 1.0')
args = parser.parse_args()

##################################################################
# function
##################################################################
import os
user_path = os.path.expanduser('~')  # '/home/coder352'
from configparser import ConfigParser  # 读配置文件
cfg = ConfigParser()
cfg.read(user_path + '/github/jShellscript/bin/template/config.ini')
path = cfg.get('PATH', 'current_path')
separator = cfg.get('MISC', 'separator')
def l1():
    print separator + ' cmd'
    f = open(path + '/src/jptmysql/l1_simple.py')
    for line in f.readlines()[2:]:  # 去掉开头两行相同的
        print ' ' * 4 + line,
def l2():
    print separator + ' class'
    f = open(path + '/src/jptmysql/l2_class_insert_delete_update_select.py')
    for line in f.readlines()[2:]:  # 去掉开头两行相同的
        print ' ' * 4 + line,

##################################################################
# main
##################################################################
import sys
if __name__ == "__main__":
    if args.autho:
        print args.autho

    if len(sys.argv) == 1:
        l1()
        exit(0)
    if args.l1:
        l1()
        exit(0)
    if args.easy:
        l1()
        exit(0)
    if args.l2:
        l2()
        exit(0)
