#   if [[ -z "$ORIG" ]]; then
#     ORIG=$PS1
#   fi
#   TITLE="\[\e]2;$*\a\]"
#   PS1=${ORIG}${TITLE}
# }
# set-title "路尽隐香处 翩然雪海间"
